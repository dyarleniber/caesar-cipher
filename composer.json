{
    "name": "dyarleniber/caesar-cipher",
    "description": "Caesar cipher",
    "license": "MIT",
    "authors": [{
        "name": "Dyarlen Iber",
        "email": "dyarlen1@gmail.com"
    }],
    "require": {
        "php": ">=7.2",
        "guzzlehttp/guzzle": "~6.0",
        "monolog/monolog": "^1.17",
        "slim/php-view": "^2.0",
        "slim/slim": "^3.1",
        "vlucas/phpdotenv": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": ">=8.2"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "CaesarCipher\\": "src/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8022 -t public",
        "test": "phpunit"
    }
}